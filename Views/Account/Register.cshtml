@model SkillBridge.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/Styles/register.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="width: 400px; border-radius: 12px;">
        <h2 class="text-center mb-4">Register</h2>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Email)
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-envelope"></i>
                    </span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
                </div>
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.Password)
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password" })
                </div>
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.ConfirmPassword)
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock-fill"></i>
                    </span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm your password" })
                </div>
            </div>

            <button type="submit" class="btn text-white w-100" style="background: linear-gradient(to right, #ff416c, #ff4b2b); border-radius: 25px; font-weight: bold;">
                REGISTER
            </button>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
