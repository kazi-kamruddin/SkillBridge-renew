@model List<SkillBridge.Models.InteractionIndexViewModel>

@section Styles {
    <link rel="stylesheet" href="~/Styles/indexInteractions.css" />
}

@foreach (var interaction in Model)
{
    <div class="card">
        <h4>@interaction.OtherUserName</h4>
        <p>Teaching: @interaction.SkillYouTeach</p>
        <p>Learning: @interaction.SkillYouLearn</p>
        <a href="@Url.Action("Sessions", "Interactions", new { id = interaction.InteractionId })">View Stages</a>
    </div>
}
