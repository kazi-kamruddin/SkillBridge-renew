@model SkillBridge.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

@section Styles {
    <link rel="stylesheet" href="~/Styles/changePassword.css" />
    <style>
        .change-card {
            width: 400px;
            border-radius: 12px;
            padding: 30px 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

            .change-card h2 {
                text-align: center;
                margin-bottom: 30px;
            }

            .change-card .form-group {
                margin-bottom: 20px;
            }

            .change-card .form-control {
                width: 100%;
                border-radius: 25px;
                padding: 10px 15px;
            }

            .change-card .btn-submit {
                width: 100%;
                border-radius: 25px;
                background-color: #ff4b2b;
                color: white;
                font-weight: bold;
                transition: background-color 0.3s;
            }

                .change-card .btn-submit:hover {
                    background-color: #28a745; /* green on hover */
                }
    </style>
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card change-card">
        <h2>Change Password</h2>

        @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Enter Old Password" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Enter New Password" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm New Password" })
            </div>

            <button type="submit" class="btn btn-submit mt-3">Submit</button>
        }
    </div>
</div>
